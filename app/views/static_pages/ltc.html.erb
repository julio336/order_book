<div class="container">
	<div class=container>
		<h1>LTC/USDT</h1>
		<h2>Actual price: <%= @price %></h2>
	</div>
	<div class="container">
		<div class="row">
		<div class="col-md-6">
			<table class="table">
			  <thead>
			    <tr>
			      <th scope="col">#</th>
			      <th style="text-align: right" scope="col">BID Price</th>
			      <th style="text-align: right" scope="col">Amount</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @bid.each_with_index do |(bid, amount), index| %>
				    <tr <%='style=background:rgba(72,207,57,0.4);' if amount > 1500 %>>
				      <th scope="row"><%= index %></th>
				      <td style="text-align: right"><%= bid %></td>
				      <td style="text-align: right"><%= amount %></td>
				    </tr>
			   	<% end -%>
			  </tbody>
			</table>
		</div>
		<div class="col-md-6">
			<table class="table">
			  <thead>
			    <tr>
			      <th scope="col">#</th>
			      <th style="text-align: right" scope="col">ASK Price</th>
			      <th style="text-align: right" scope="col">Amount</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @ask.each_with_index do |(ask, amount), index| %>
				    <tr <%='style= background:rgb(252,199,199);' if amount > 1500 %>>
				      <th scope="row"><%= index %></th>
				      <td style="text-align: right"><%= ask %></td>
				      <td style="text-align: right"><%= amount %></td>
				    </tr>
			   	<% end -%>
			  </tbody>
			</table>
		</div>
	</div>
	</div>
</div>
